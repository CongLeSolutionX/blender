#include "stdcycles.h"

shader node_scatter_volume(string phase = "Henyey-Greenstein",
                           color Color = color(0.8, 0.8, 0.8),
                           float Density = 1.0,
                           float Anisotropy = 0.0,
                           float IOR = 1.33,
                           float B = 0.1,
                           float Alpha = 0.5,
                           float Diameter = 20.0,
                           output closure color Volume = 0)
{
  closure color scatter = 0;
  if (phase == "Fournier-Forand") {
    scatter = fournier_forand(B, IOR);
  }
  else if (phase == "Draine") {
    scatter = draine(AnisotropyAlpha);
  }
  else if (phase == "Rayleigh") {
    scatter = rayleigh();
  }
  else if (phase == "Mie") {
    float d = max(Diameter, 2.0);
    aniso_hg = exp(-0.0990567 / (d - 1.67154));
    aniso_d = exp(-2.20679 / (d + 3.91029) - 0.428934);
    alpha = exp(3.62489 - 8.29288 / (d + 5.52825));
    mixture = exp(-0.599085 / (d - 0.641583) - 0.665888);
    scatter = mix(henyey_greenstein(aniso_hg), draine(aniso_d, alpha), mixture);
  }
  else {
    scatter = henyey_greenstein(Anisotropy);
  }

  Volume = (Color * max(Density, 0.0)) * scatter;
}
